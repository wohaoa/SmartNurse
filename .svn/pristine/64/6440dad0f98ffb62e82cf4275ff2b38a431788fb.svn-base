<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9F6"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:text="&lt;返回"
        android:textColor="#65bc5e"
        android:textSize="24dp" />
    
    <LinearLayout
        android:id="@+id/concern_title"
        android:layout_below="@+id/btn_back" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <com.magicare.smartnurse.view.CircleImageView
            xmlns:myxmlns="http://schemas.android.com/apk/res/com.magicare.smartnurse"
        	android:id="@+id/iv_photo"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="17dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_defaultface"
            myxmlns:border_color="@android:color/transparent"
       		myxmlns:border_width="0dp" />
        
        <TextView 
            android:id="@+id/child_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:textColor="#333333"
            android:text="老王女儿的叮嘱"
            android:textSize="28dp"
            android:layout_gravity="center_vertical"/>
        
    </LinearLayout>
    
    <ListView
        android:id="@+id/lv_concern"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/concern_title"
        android:divider="@null"
        android:listSelector="@android:color/transparent" >
    </ListView>


</RelativeLayout>