<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/adapter_dealwith_item_height"
        android:layout_marginTop="@dimen/adapter_dealwith_item_margintop"
        android:background="#f1f1f1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="@dimen/adapter_dealwith_item_paddingright" >

        <LinearLayout
            android:id="@+id/layout_warn_type"
            android:layout_width="@dimen/adapter_dealwith_layout_warn_type_width"
            android:layout_height="match_parent"
            android:background="@color/active_warn_color"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_warning_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_alarm_dark" />

            <TextView
                android:id="@+id/tv_warning_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="主动报警"
                android:textColor="#ffffff"
                android:textSize="@dimen/adapter_dealwith_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_user"
            style="@style/adapter_dealwith_layout_user" >

            <com.magicare.smartnurse.view.CircleImageView
                xmlns:myxmlns="http://schemas.android.com/apk/res/com.magicare.smartnurse"
                android:id="@+id/civ_photo"
                android:layout_width="@dimen/adapter_dealwith_civ_photo_widthorheight"
                android:layout_height="@dimen/adapter_dealwith_civ_photo_widthorheight"
                android:layout_marginBottom="25dp"
                android:layout_marginLeft="@dimen/adapter_dealwith_civ_photo_marginleft"
                android:layout_marginTop="25dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_defaultface"
                myxmlns:border_width="0dp" />

            <TextView
                android:id="@+id/tv_name"
                style="@style/monitor_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:paddingLeft="8dp"
                android:singleLine="true"
                android:text="张三丰" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_warn_time"
            style="@style/adapter_dealwith_warn_time"
            android:paddingLeft="5dp"
            android:text="2015-01-22 11:12" />

        <TextView
            android:id="@+id/tv_location"
            style="@style/adapter_dealwith_location"
            android:paddingLeft="5dp"
            android:text="13栋3楼中部" />

        <Button
            android:id="@+id/btn_feedback"
            android:layout_width="@dimen/adapter_dealwith_btn_feedback_width"
            android:layout_height="@dimen/adapter_dealwith_btn_feedback_height"
            android:background="@drawable/monitor_btn_dealwith_selector"
            android:text="反馈"
            android:textColor="#ffffff"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>