<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/layout_warn_type"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@color/active_warn_color"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_warn_type"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_alarm" />

            <TextView
                android:id="@+id/tv_warn_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主动报警"
                android:layout_marginTop="8dp"
                android:textColor="#ffffff"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_photo"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_avatar" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:text="张三丰"
                    android:textColor="#333333"
                    android:textSize="15dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="13栋3楼中部"
                android:textColor="#333333"
                android:textSize="15dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_dealwith"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_normal_tv"
            android:text="处理"
            android:textColor="#333333"
            android:textSize="15dp" />
    </LinearLayout>

</LinearLayout>