<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9F6"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:text="&lt;返回"
        android:textColor="#65bc5e"
        android:textSize="24dp" />

    <RelativeLayout
        android:id="@+id/concern_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_back"
        android:orientation="horizontal" >

        <com.magicare.smartnurse.view.CircleImageView
            xmlns:myxmlns="http://schemas.android.com/apk/res/com.magicare.smartnurse"
            android:id="@+id/iv_photo"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="26dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_defaultface"
            myxmlns:border_color="@android:color/transparent"
            myxmlns:border_width="0dp" />

        <TextView
            android:id="@+id/child_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="26dp"
            android:layout_toRightOf="@id/iv_photo"
            android:gravity="center"
            android:text="老王女儿的叮嘱"
            android:textColor="#333333"
            android:textSize="28dp" />

        <Button
            android:id="@+id/concern_history"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/userdetail_button_healthandsport_height"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="@dimen/userdetail_linelayout_top"
            android:layout_marginRight="17dp"
            android:layout_marginTop="26dp"
            android:background="@drawable/collect_btn_record_selector"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="叮嘱记录" />
    </RelativeLayout>

    <ListView
        android:id="@+id/lv_concern"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/concern_title"
        android:divider="@null"
        android:listSelector="@android:color/transparent" >
    </ListView>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="132dp"
        android:layout_alignParentBottom="true" >

        <EditText
            android:id="@+id/et_concern"
            android:layout_width="fill_parent"
            android:layout_height="142dp"
            android:background="@android:color/white"
            android:gravity="left|top"
            android:hint="回复内容"
            android:padding="22dp"
            android:textColor="#919191"
            android:textColorHint="#757575"
            android:textSize="24dp" />

        <Button
            android:id="@+id/send_concern"
            android:layout_width="150dp"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_care_selector"
            android:text="回复"
            android:textColor="#757575"
            android:textSize="45dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/add_image"
            android:layout_width="150dp"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/concern_add_selector"
            android:textColor="#757575"
            android:textSize="45dp" />
    </RelativeLayout>

</RelativeLayout>