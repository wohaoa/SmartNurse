<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginTop="4dp"
        android:background="#ffffff" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:background="#ffffff" >

            <TextView
                android:id="@+id/tv_collect_time"
                style="@style/collect_record_title_style"
                android:layout_weight="1.8"
                android:text="采集时间" />

            <TextView
                android:id="@+id/tv_nursename"
                style="@style/collect_record_title_style"
                android:layout_weight="1"
                android:text="采集人" />

            <TextView
                android:id="@+id/tv_userid"
                style="@style/collect_record_title_style"
                android:layout_weight="1"
                android:text="账号" />

            <TextView
                android:id="@+id/tv_username"
                style="@style/collect_record_title_style"
                android:layout_weight="1"
                android:text="姓名" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="5"
            android:background="#ffffff" >

            <TextView
                android:id="@+id/tv_weight"
                style="@style/collect_record_title_style"
                android:layout_weight="1.3"
                android:text="体重(Kg)" />

            <TextView
                android:id="@+id/tv_bloodpressure"
                style="@style/collect_record_title_style"
                android:layout_weight="1.3"
                android:text="血压(mmHg)" />

            <TextView
                android:id="@+id/tv_heartrate"
                style="@style/collect_record_title_style"
                android:layout_weight="1.3"
                android:text="心率(BPM)" />

            <TextView
                android:id="@+id/tv_bloodsugar"
                style="@style/collect_record_title_style"
                android:layout_weight="1.3"
                android:text="血糖(MMOL/L)" />

            <Button
                android:id="@+id/btn_retest"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.5"
                android:background="@drawable/collect_btn_retest_selector"
                android:gravity="center"
                android:text="重新测量"
                android:textSize="18dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>