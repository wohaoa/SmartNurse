                android:id="@+id/civ_photo"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="14dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_defaultface"
