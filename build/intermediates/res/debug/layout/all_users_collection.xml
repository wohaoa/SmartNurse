<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#001027"
    android:baselineAligned="false"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/collection_top"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/collection_persons"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/icon_building"
                android:drawablePadding="10dp"
                android:gravity="left|center_vertical"
                android:lines="2"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:text="@string/collection_persons"
                android:textColor="#00c377"
                android:textSize="17sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/collection_time"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:background="@drawable/bg_time"
            android:gravity="center"
            android:text="@string/collection_time"
            android:textColor="@android:color/white"
            android:textSize="20dp" />

        <RelativeLayout
            android:id="@+id/collection_top_right_layout"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1" >

            <RelativeLayout
                android:id="@+id/collection_warning_layout"
                android:layout_width="195dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:background="@drawable/collection_warning_bg"
                android:visibility="invisible" >

                <TextView
                    android:id="@+id/collection_warning"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@drawable/icon_alarm"
                    android:drawablePadding="2dp"
                    android:gravity="center"
                    android:text="@string/collection_warning"
                    android:textColor="@android:color/white"
                    android:textSize="19sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/collection_more_layout"
                android:layout_width="65dp"
                android:layout_height="40dp"
                android:layout_alignTop="@id/collection_warning_layout"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@id/collection_warning_layout"
                android:background="@drawable/collection_more_layout_bg"
                android:clickable="true" >

                <TextView
                    android:id="@+id/collection_more"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="@string/collection_more"
                    android:textSize="19sp" />

                <ImageView
                    android:id="@+id/collection_more_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@id/collection_more"
                    android:contentDescription="@null"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_more_s" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/chart_parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6" >

        <lecho.lib.hellocharts.view.ComboLineColumnChartView
            android:id="@+id/collection_chart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10dp"
            android:paddingLeft="80dp"
            android:paddingRight="50dp"
            android:paddingTop="10dp" >
        </lecho.lib.hellocharts.view.ComboLineColumnChartView>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/collection_bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="#02142D"
        android:baselineAligned="false"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#5c708c" />

        <FrameLayout
            android:id="@+id/collection_viewpager_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" >

            <android.support.v4.view.ViewPager
                android:id="@+id/collection_viewpager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp" />

            <include
                android:id="@+id/collection_scale_view3"
                layout="@layout/collection_gridview_item3"
                android:visibility="gone" />

            <include
                android:id="@+id/collection_scale_view5"
                layout="@layout/collection_gridview_item5"
                android:visibility="gone" />

            <include
                android:id="@+id/collection_scale_view10"
                layout="@layout/collection_gridview_item10"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/collection_last"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="15dp"
                android:clickable="true"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/tv_collection_last_selector"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/collection_next"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="15dp"
                android:clickable="true"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/tv_collection_next_selector"
                android:visibility="gone" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout><!-- From: file:/Users/lhw/AndroidStudioProjects/SmartNurse/res/layout/all_users_collection.xml -->