<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#f5f9ed"
    android:orientation="vertical" >

     <LinearLayout 
     	android:id="@+id/hidden_linear"
    	android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:visibility="gone"
    	android:gravity="center"
    	android:orientation="vertical" >
    	<ProgressBar
        	android:id="@+id/pb"
        	style="?android:attr/progressBarStyleHorizontal"
        	android:layout_width="fill_parent"
        	android:layout_height="5dip"
        	android:indeterminateOnly="false"
        	android:max="100"
        	android:progressDrawable="@drawable/progress_bar_states" >
    	</ProgressBar>
    	<WebView
			android:id="@+id/magicare_view"
	    	android:layout_width="fill_parent"
	    	android:layout_height="fill_parent"
    	/>
    </LinearLayout>

     <LinearLayout
        android:id="@+id/info_linear"
    	android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:gravity="center"
    	android:orientation="vertical" >
     
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/icon_zhyl" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:text="专注智慧养老服务"
        android:textSize="30dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="护士端1.0"
            android:textColor="#9d9d9d"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btn_update"
            android:layout_width="120dp"
            android:layout_height="42dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/collect_btn_retest_selector"
            android:text="检查更新"
            android:textSize="18dp" />
    </LinearLayout>

    <Button
        android:id="@+id/introduction"
        android:layout_width="171dp"
        android:layout_height="54dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/btn_green_rectangle_selector"
        android:text="麦麦养老介绍"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <Button
        android:id="@+id/help"
        android:layout_width="171dp"
        android:layout_height="54dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/btn_green_rectangle_selector"
        android:text="帮助中心"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btn_feedback"
        android:layout_width="171dp"
        android:layout_height="54dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/btn_green_rectangle_selector"
        android:text="意见反馈"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:orientation="horizontal" >

        <TextView
            android:textColor="#9d9d9d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="48dp"
            android:text="Copyright© 2015 Magicare"
            android:textSize="18dp" />

        <TextView
            android:textColor="#65ba21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="40dp"
            android:text="Tel：400-861-8631"
            android:textSize="18dp" />
    </LinearLayout>
</LinearLayout>

</LinearLayout><!-- From: file:/Users/apple/Documents/ASworkspace/SmartNurse/res/layout/fragment_about.xml -->