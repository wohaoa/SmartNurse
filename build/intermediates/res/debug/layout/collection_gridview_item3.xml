<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/collection_gridview_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:clickable="false"
    android:descendantFocusability="blocksDescendants"
    android:focusable="false"
    android:orientation="horizontal"
    android:padding="15dp" >

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="false"
        android:focusable="false" >

        <lecho.lib.hellocharts.view.PieChartView
            android:id="@+id/collection_chart_three"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/collection_region_three"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
	            android:singleLine="true"
	            android:maxEms="7"
	            android:ellipsize="end"           
                android:paddingTop="10dp"
                android:text="@string/collection_region"
                android:textColor="#96A4CF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/collection_region_persons_three"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:text="@string/collection_region_persons"
                android:textColor="#a1a7a1"
                android:textSize="25dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/collection_region_normal_three"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:contentDescription="@null"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_sport" />

                <TextView
                    android:id="@+id/collection_region_movement_three"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="@string/collection_region_movement"
                    android:textColor="#a1a7a1"
                    android:textSize="15.5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:paddingTop="4dp"                 
                    android:layout_gravity="left"
                    android:contentDescription="@null"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_state" />

                <TextView
                    android:id="@+id/collection_region_motionless_three"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="@string/collection_region_movement"
                    android:textColor="#a1a7a1"
                    android:textSize="15.5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:contentDescription="@null"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_sleep" />

                <TextView
                    android:id="@+id/collection_region_sleep_three"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="@string/collection_region_movement"
                    android:textColor="#a1a7a1"
                    android:textSize="15.5dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/collection_region_unnormal_three"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                android:id="@+id/collection_region_alarm_three"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/icon_alarm_all_s"
                android:drawablePadding="5dp"
                android:gravity="left|center_vertical"
                android:text="@string/collection_region_alarm"
                android:textColor="@android:color/white"
                android:textSize="15.5dp" />

            <TextView
                android:id="@+id/collection_region_missing_three"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/icon_out"
                android:drawablePadding="10dp"
                android:gravity="left|center_vertical"
                android:text="@string/collection_region_missing"
                android:textColor="@android:color/white"
                android:textSize="15.5dp"
                android:visibility="gone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="15.5dp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout><!-- From: file:/Users/lhw/AndroidStudioProjects/SmartNurse/res/layout/collection_gridview_item3.xml -->