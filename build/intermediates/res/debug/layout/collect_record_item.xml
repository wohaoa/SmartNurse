<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_LinearLayout_height"
        android:background="#ffffff" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:background="@color/chart_content_background" >

            <TextView
                android:id="@+id/tv_collect_time"
                style="@style/collect_record_title_style"
                android:layout_weight="1.8"
                android:textColor="@color/chart_content_color"
                android:text="采集时间" />

            <TextView
                android:id="@+id/tv_nursename"
                style="@style/collect_record_title_style"
                android:layout_weight="1"
                android:textColor="@color/chart_content_color"
                android:text="采集人" />

            <TextView
                android:id="@+id/tv_userid"
                style="@style/collect_record_title_style"
                android:layout_weight="1"
                android:textColor="@color/chart_content_color"
                android:text="账号" />

            <TextView
                android:id="@+id/tv_username"
                style="@style/collect_record_title_style"
                android:layout_weight="1"
                android:textColor="@color/chart_content_color"
                android:text="姓名" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="5"
            android:background="@color/chart_content_background" >

            <TextView
                android:id="@+id/tv_weight"
                style="@style/collect_record_title_style"
                android:layout_weight="1.3"
                android:textColor="@color/chart_content_color"
                android:text="体重(Kg)" />

            <TextView
                android:id="@+id/tv_bloodpressure"
                style="@style/collect_record_title_style"
                android:layout_weight="1.3"
                android:textColor="@color/chart_content_color"
                android:text="血压(mmHg)" />

            <TextView
                android:id="@+id/tv_heartrate"
                style="@style/collect_record_title_style"
                android:layout_weight="1.3"
                android:textColor="@color/chart_content_color"
                android:text="心率(BPM)" />

            <TextView
                android:id="@+id/tv_bloodsugar"
                style="@style/collect_record_title_style"
                android:layout_weight="1.3"
                android:textColor="@color/chart_content_color"
                android:text="血糖(MMOL/L)" />

            <LinearLayout
                android:id="@+id/line"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.5"
                android:gravity="center" >

                <Button
                    android:id="@+id/btn_retest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/collect_btn_retest_selector"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="重新测量"
                    android:textSize="@dimen/item_textview" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout><!-- From: file:/D:/Dropbox/AndroidStudioProject/SmartNurse/res/layout/collect_record_item.xml -->