<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/item_LinearLayout_titleheight"
        android:background="@color/chart_title_background"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:background="@color/chart_title_background" >

            <TextView
                android:id="@+id/tv_collect_time"
                style="@style/collect_record_title_style"
                android:layout_weight="1.8"
                android:text="采集时间"
                android:textColor="@color/chart_title_color"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_nursename"
                style="@style/collect_record_title_style"
                android:layout_weight="1"
                android:text="采集人"
                android:textColor="@color/chart_title_color"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_userid"
                style="@style/collect_record_title_style"
                android:layout_weight="1"
                android:text="老人编号"
                android:textColor="@color/chart_title_color"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_username"
                style="@style/collect_record_title_style"
                android:layout_weight="1"
                android:text="姓名"
                android:textColor="@color/chart_title_color"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="5"
            android:background="@color/chart_title_background" >

            <TextView
                android:id="@+id/tv_weight"
                style="@style/collect_record_title_style"
                android:layout_weight="1.3"
                android:text="体重(Kg)"
                android:textColor="@color/chart_title_color"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_bloodpressure"
                style="@style/collect_record_title_style"
                android:layout_weight="1.3"
                android:text="血压(mmHg)"
                android:textColor="@color/chart_title_color"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_heartrate"
                style="@style/collect_record_title_style"
                android:layout_weight="1.3"
                android:text="心率(BPM)"
                android:textColor="@color/chart_title_color"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_bloodsugar"
                style="@style/collect_record_title_style"
                android:layout_weight="1.3"
                android:text="血糖(MMOL/L)"
                android:textColor="@color/chart_title_color"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="center"
                android:visibility="gone" >

                <Button
                    android:id="@+id/btn_retest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/collect_btn_retest_selector"
                    android:gravity="center"
                    android:text="重新测量"
                    android:textSize="18dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:divider="@android:color/transparent"
        android:dividerHeight="4dp"
        android:id="@+id/mylist"
        android:layout_width="fill_parent"
        android:layout_height="400dp" >
    </com.handmark.pulltorefresh.library.PullToRefreshListView>

</LinearLayout><!-- From: file:/Users/apple/Documents/ASworkspace/SmartNurse/res/layout/activity_collecthistory.xml -->