<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#33D2D2D2"
            android:orientation="vertical"
            android:paddingLeft="27dp"
            android:paddingRight="40dp"
            android:paddingTop="10dp" >

            <lecho.lib.hellocharts.view.ComboLineColumnChartView
                android:id="@+id/chart"
                android:layout_width="@dimen/sleep_LineChartView_width"
                android:layout_height="@dimen/sleep_LineChartView_height" />

            <LinearLayout
                android:id="@+id/line_block"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/line_block_height"
                android:gravity="center"
                android:orientation="horizontal" >
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/btn_previour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="&lt;前一天"
            android:textColor="#333333"
            android:textSize="16dp" />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:background="@android:color/transparent"
            android:text="后一天>"
            android:textColor="#333333"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_toRightOf="@+id/line"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="158dp"
                android:layout_height="44dp"
                android:background="@color/chart_title_background"
                android:gravity="center_vertical|right"
                android:paddingRight="27dp"
                android:text="米数"
                android:textColor="@color/chart_title_color"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_mile"
                android:layout_width="134dp"
                android:layout_height="44dp"
                android:layout_marginLeft="5dp"
                android:background="@color/chart_content_background"
                android:gravity="center_vertical|left"
                android:paddingLeft="27dp"
                android:text="0米"
                android:textColor="@color/chart_content_color"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="158dp"
                android:layout_height="44dp"
                android:background="@color/chart_title_background"
                android:gravity="center_vertical|right"
                android:paddingRight="27dp"
                android:text="步数"
                android:textColor="@color/chart_title_color"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_step"
                android:layout_width="134dp"
                android:layout_height="44dp"
                android:layout_marginLeft="5dp"
                android:background="@color/chart_content_background"
                android:gravity="center_vertical|left"
                android:paddingLeft="27dp"
                android:text="0步"
                android:textColor="@color/chart_content_color"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="158dp"
                android:layout_height="44dp"
                android:background="@color/chart_title_background"
                android:gravity="center_vertical|right"
                android:paddingRight="27dp"
                android:text="卡路里"
                android:textColor="@color/chart_title_color"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_calorie"
                android:layout_width="134dp"
                android:layout_height="44dp"
                android:layout_marginLeft="5dp"
                android:background="@color/chart_content_background"
                android:gravity="center_vertical|left"
                android:paddingLeft="27dp"
                android:text="0KJ"
                android:textColor="@color/chart_content_color"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="158dp"
                android:layout_height="44dp"
                android:background="@color/chart_title_background"
                android:gravity="center_vertical|right"
                android:paddingRight="27dp"
                android:text="睡觉时间"
                android:textColor="@color/chart_title_color"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_sleeplong"
                android:layout_width="134dp"
                android:layout_height="44dp"
                android:layout_marginLeft="5dp"
                android:background="@color/chart_content_background"
                android:gravity="center_vertical|left"
                android:paddingLeft="27dp"
                android:text="0min"
                android:textColor="@color/chart_content_color"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center_horizontal"
            android:visibility="gone"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="158dp"
                android:layout_height="44dp"
                android:background="@color/chart_title_background"
                android:gravity="center_vertical|right"
                android:paddingRight="27dp"
                android:text="睡眠深度时间"
                android:textColor="@color/chart_title_color"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_deepsleep"
                android:layout_width="134dp"
                android:layout_height="44dp"
                android:layout_marginLeft="5dp"
                android:background="@color/chart_content_background"
                android:gravity="center_vertical|left"
                android:paddingLeft="27dp"
                android:text="0min"
                android:textColor="@color/chart_content_color"
                android:textSize="16dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout><!-- From: file:/D:/Git/SmartNurse/res/layout/fragment_oldusersleepinfo1.xml -->