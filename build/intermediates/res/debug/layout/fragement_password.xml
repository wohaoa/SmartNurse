<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f9ed"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical" >

    <com.magicare.smartnurse.view.ClearEditText
        android:id="@+id/et_oldpassword"
        android:layout_width="520dp"
        android:layout_height="58dp"
        android:background="@drawable/editext_selector"
        android:hint="请输入原密码"
        android:paddingLeft="20dp"
        android:textColorHint="#cbcfc7"
        android:textSize="20dp" />

    <com.magicare.smartnurse.view.ClearEditText
        android:id="@+id/et_newpassword"
        android:layout_width="520dp"
        android:layout_height="58dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/editext_selector"
        android:hint="请输入新密码"
        android:paddingLeft="20dp"
        android:textColorHint="#cbcfc7"
        android:textSize="20dp" />

    <com.magicare.smartnurse.view.ClearEditText
        android:id="@+id/et_confirmpassword"
        android:layout_width="520dp"
        android:layout_height="58dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/editext_selector"
        android:hint="请再次输入新密码"
        android:paddingLeft="20dp"
        android:textColorHint="#cbcfc7"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btn_pwd"
        android:layout_width="520dp"
        android:layout_height="58dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/btn_green_rectangle_selector"
      
        android:text="确定修改"
        android:textSize="20dp"
        android:textColor="#ffffff" />

</LinearLayout><!-- From: file:/Users/lhw/AndroidStudioProjects/SmartNurse/res/layout/fragement_password.xml -->