<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@+id/fl_main"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0" />
        <FrameLayout
            android:id="@+id/fl_menu"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

        <RadioGroup
            android:id="@+id/rg_menu"
            android:layout_width="fill_parent"
            android:layout_height="72dp"
            android:gravity="bottom"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/rb_monitor"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/menu_btn_selector"
                android:button="@null"
                android:checked="true"
                android:drawablePadding="0dp"
                android:drawableRight="@drawable/menu_eye_selector"
                android:paddingLeft="120dp"
                android:paddingRight="110dp"
                android:singleLine="true"
                android:text="状态"
                android:textColor="@drawable/selector_color"
                android:textSize="25sp" />

            <RadioButton
                android:id="@+id/rb_query"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/menu_btn_selector"
                android:button="@null"
                android:drawablePadding="0dp"
                android:drawableRight="@drawable/menu_magnify_selector"
                android:paddingLeft="120dp"
                android:paddingRight="110dp"
                android:singleLine="true"
                android:text="查询"
                android:textColor="@drawable/selector_color"
                android:textSize="25sp" />

            <RadioButton
                android:id="@+id/rb_collect"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/menu_btn_selector"
                android:button="@null"
                android:drawablePadding="0dp"
                android:drawableRight="@drawable/menu_collect_selector"
                android:paddingLeft="120dp"
                android:paddingRight="110dp"
                android:singleLine="true"
                android:text="采集"
                android:textColor="@drawable/selector_color"
                android:textSize="25sp" />

	        <RadioButton
	            android:id="@+id/rb_more"
	            android:layout_width="0dp"
	            android:layout_height="fill_parent"
	            android:layout_weight="1.0"
	            android:background="@drawable/menu_btn_selector"
	            android:button="@null"
	            android:drawablePadding="0dp"
	            android:drawableRight="@drawable/menu_more_selector"
	            android:paddingLeft="120dp"
	            android:paddingRight="110dp"
	            android:singleLine="true"
	            android:text="更多"
	            android:textColor="@drawable/selector_color"
	            android:textSize="25sp" >

	        </RadioButton>
        </RadioGroup>
        <TextView
            android:textSize="16sp"
            android:id="@+id/iv_unconcern"
            android:layout_marginRight="90dp"
            android:layout_marginTop="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right|top"
            android:background="@drawable/icon_unconcern"
            android:gravity="center"
            android:visibility="gone"
            android:textColor="#ffffff" />
    </FrameLayout>
    </LinearLayout>

</LinearLayout><!-- From: file:/D:/Git/SmartNurse/res/layout/tabhost_main.xml -->